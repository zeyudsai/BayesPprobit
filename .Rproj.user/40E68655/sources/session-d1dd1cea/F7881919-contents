# 测试 q_pgnorm 函数
p_vals <- c(0.1, 0.5, 0.9)
mu_vals <- c(0, 1, -1)
scale_vals <- c(1, 1, 1)
p_param <- 2

q_values <- q_pgnorm(p_vals, mu = mu_vals, p = p_param, scale = scale_vals)
print(q_values)

# 测试 rtrunc_pgnorm 函数
n_samples <- 5
mu_samples <- c(0, 0.5, -0.5, 1, -1)
lower_bounds <- c(-Inf, -1, -2, -Inf, -Inf)
upper_bounds <- c(Inf, 1, 0, Inf, 0)

samples <- rtrunc_pgnorm(n_samples, mu = mu_samples, p = p_param, lower = lower_bounds, upper = upper_bounds)
print(samples)
